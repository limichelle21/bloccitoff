<%= form_for item do |f| %>

<% if item.errors.any? %>
	<div class="alert alert-danger">
		<h4><%= pluralize(item.errors.count, "error") %>.</h4>
		<ul>
			<% item.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>


	<%= form_group_tag(item.errors[:body]) do %>
		<%= f.label :body %>
		<%= f.text_field :body, rows: 2, class: 'form-control', placeholder: "Enter to-do list item." %>
		<% end %>

	<div class="form-group">
		<%= f.submit "Save Item", class: 'btn btn-success' %>
	</div>

<% end %>