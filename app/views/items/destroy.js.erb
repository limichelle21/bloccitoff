<% if @item.destroyed? %>
	$('#item-' +<%= @item.id %>).hide();
	$('.js-items-count').html("<%= pluralize(current_user.items.count, 'item') %> left");
<% else %>
	$('#item-' +<%= @item.id %>).prepend("div class='alert alert-danger'><%= flash[:error] = "Error deleting the item." %></div>");
<% end %>
