<% if @item.destroyed? %>
	$('#item-<%= @item.id %>').hide();
	$('.js-items-count').html("<%= pluralize(current_user.items.count, 'item') %> left");
	$('.flash').html("<div class='alert alert-success'><%= @flash[:notice] %></div>");
<% else %>
	$('.flash').html("<div class='alert alert-danger'><%= @flash[:error] %></div>");
<% end %>
