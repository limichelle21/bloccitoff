
<h1>New Item</h1>

<div class="row">
	<div class="col-md-8">
		<%= form_for @item do |f| %>
		<div class="form-group">
			<%= f.label :item %>
			<%= f.text_field :body, rows: 2, class: 'form-control', placeholder: "Enter your to-do item here" %>
		</div>
		<div class="form-group">
			<%= f.submit "Save Item", class: 'btn btn-success' %>
		</div>
	<% end %>
	</div>
</div>

